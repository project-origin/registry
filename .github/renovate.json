{
    "labels": [
        "chore"
    ],
    "platformAutomerge": true,
    "packageRules": [
        {
            "description": "Automerge non-major updates",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true
        },
        {
            "groupName": "nuget",
            "automerge": true,
            "description": "Dotnet nuget packages",
            "matchDatasources": [
                "nuget"
            ],
            "matchPackagePatterns": [
                ".*"
            ]
        },
        {
            "groupName": "Dockerfile updates",
            "automerge": true,
            "matchFileNames": [
                "**/Dockerfile"
            ]
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "depNameTemplate": "concordium/testnet-node",
            "fileMatch": [
                ".csproj$"
            ],
            "matchStrings": [
                "<SourceUrl>https:\/\/raw.githubusercontent.com\/(?<depName>.+)\/(?<currentValue>v[^\/]+).+<\/SourceUrl>"
            ],
            "datasourceTemplate": "github-releases"
        },
        {
            "customType": "regex",
            "fileMatch": [
                "concordium-node.yaml$"
            ],
            "matchStrings": [
                "concordium\\.network }}-node:(?<currentValue>\\d+\\.\\d+\\.\\d+-\\d+)"
            ],
            "datasourceTemplate": "docker"
        }
    ]
}
