{
    "build": {
        "content": [
            {
                "files": [
                    "**/*.yml"
                ],
                "src": "obj/api",
                "dest": "api"
            },
            {
                "files": [
                    "**/*.md",
                    "toc.yml",
                    "**/toc.yml"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "**/*.svg",
                    "logo.png"
                ]
            }
        ],
        "overwrite": "api-overrides/*.md",
        "globalMetadata": {
            "_appTitle": "Project Origin",
            "_enableSearch": true
        },
        "template": [
            "default",
            "modern"
        ],
        "markdownEngineName": "markdig",
        "markdownEngineProperties": {
            "markdigExtensions": [
                "mathematics",
                "footnotes"
            ]
        },
        "dest": "_site",
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ]
    }
}
